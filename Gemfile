# A sample Gemfile
source "https://rubygems.org"

gem 'pry'
gem 'sqlite3', '~>1.3.6' #lets us connect to sql data base 

group :test do
  gem 'rake'
  gem 'rspec'
  gem 'rack-test'
end

#def all our 'dependancies' and external ruby code that our files needs
#sinatra - gives us additional rake tasks 

#RUN 'bundle install' to install these gems 